@page "/Accounts"
@model app.Pages.Account.AccountsModel
@{
    ViewData["Title"] = "Cuentas";
    Layout = "_Layout";
}

<div class="container py-4" style="margin-left: 400px; max-width: 900px;">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Cuentas Registradas</h2>
        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addAccountModal">+ Agregar cuenta</button>
    </div>

    @if (Model.Accounts?.Any() == true)
    {
        <div class="list-group shadow-sm">
            @foreach (var account in Model.Accounts)
            {
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1 fw-semibold">@account.FullName</h5>
                        <small class="text-muted">📧 @account.Email | 🎓 Matrícula: @account.StudentId</small>
                    </div>
                    <div class="d-flex gap-2">
                        <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#editAccountModal-@account.Id">📝 Editar</button>
                        <form method="post" asp-page-handler="Ban" asp-route-id="@account.Id" onsubmit="return confirm('¿Estás seguro que quieres banear a esta cuenta?');">
                            <button type="submit" class="btn btn-outline-danger btn-sm">🚫 Banear</button>
                        </form>
                    </div>
                </div>

                <div class="modal fade" id="editAccountModal-@account.Id" tabindex="-1">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Editar cuenta de @account.FullName</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <form method="post" asp-page-handler="Edit">
                                    <input type="hidden" name="Id" value="@account.Id" />
                                    <div class="mb-3">
                                        <label class="form-label">Nombre</label>
                                        <input class="form-control" name="Nombre" value="@account.Name" required />
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Apellidos</label>
                                        <input class="form-control" name="Apellidos" value="@account.LastName" required />
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Email</label>
                                        <input class="form-control" name="Email" value="@account.Email" required />
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Matrícula</label>
                                        <input class="form-control" name="Matricula" value="@account.StudentId" required />
                                    </div>
                                    <button type="submit" class="btn btn-primary">Guardar cambios</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">No hay cuentas registradas aún 😿</div>
    }
</div>

<div class="modal fade" id="addAccountModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content shadow-lg">
            <div class="modal-header">
                <h5 class="modal-title fw-bold">Agregar nueva cuenta</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <form method="post" asp-page-handler="Add" onsubmit="return validarContrasenias();">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Nombre(s)</label>
                                <input class="form-control" name="Nombre" placeholder="Ej. Sakura" required />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Email</label>
                                <input type="email" class="form-control" name="Email" placeholder="sakura@example.com" required />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Matrícula</label>
                                <input class="form-control" name="Matricula" placeholder="Ej. 202503999" required />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Apellidos</label>
                                <input class="form-control" name="Apellidos" placeholder="Ej. Kinomoto" required />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Contraseña</label>
                                <input type="password" class="form-control" id="contrasena" name="Contrasena" required />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Confirmar Contraseña</label>
                                <input type="password" class="form-control" id="confirmarContrasena" required />
                                <div class="form-text text-danger d-none" id="mensajeError">Las contraseñas no coinciden</div>
                            </div>
                        </div>
                    </div>

                    <div class="text-end mt-3">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-success">Crear cuenta</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
  <script src="~/js/account.js"></script>
}


