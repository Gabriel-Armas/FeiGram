@using Microsoft.AspNetCore.Http
@{
    var usuario_token ="123";
    var userRole = Context.Request.Cookies["rol"] ?? "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Feigram</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/app.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
    <body class="" id="body">        
        <div class="container-fluid mt-4">
            <div class="row justify-content-center">
                <div class="col-lg-2 d-none d-lg-block">
                    <div class="position-fixed start-0 ms-4" style="width: 300px;">
                        <div class="d-flex align-items-center mb-4">
                            <img src="~/images/feigram_logo.png" alt="Logo" style="width: 40px; height: 40px;" class="me-2">
                            <span class="fw-bold fs-4">Feigram</span>
                        </div>


                        <div class="card p-3 shadow-sm">
                            <h5 class="fw-semibold mb-3 fs-4">Menú</h5>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item border-0 px-0">
                                    <a href="/Feed" class="text-decoration-none d-flex align-items-center gap-3 fs-5 fw-semibold">
                                        <i class="bi bi-house-door-fill"></i> Inicio
                                    </a>
                                </li>

                                <li class="list-group-item border-0 px-0">
                                    <a href="/Profile" class="text-decoration-none d-flex align-items-center gap-3 fs-5 fw-semibold">
                                        <i class="bi bi-person-fill"></i> Perfil
                                    </a>
                                </li>

                                <li class="list-group-item border-0 px-0">
                                    <a href="/Chat" class="text-decoration-none d-flex align-items-center gap-3 fs-5 fw-semibold">
                                        <i class="bi bi-chat-dots-fill"></i> Mensajes
                                    </a>
                                </li>

                                @if (userRole == "Admin")
                                {
                                    <li class="list-group-item border-0 px-0">
                                        <a href="/Accounts" class="text-decoration-none d-flex align-items-center gap-3 fs-5 fw-semibold">
                                            <i class="bi bi-person-circle"></i> Cuentas
                                        </a>
                                    </li>

                                    <li class="list-group-item border-0 px-0">
                                        <a href="/Stats" class="text-decoration-none d-flex align-items-center gap-3 fs-5 fw-semibold">
                                            <i class="bi bi-bar-chart-fill text-primary"></i> Estadísticas
                                        </a>
                                    </li>
                                }
                                <li class="list-group-item border-0 px-0"></li>
                                    <a href="#" data-bs-toggle="modal" data-bs-target="#postModal" class="text-decoration-none d-flex align-items-center gap-3 text-danger fs-5 fw-semibold">
                                        <i class="bi bi-box-arrow-right text-danger"></i> Cerrar sesión
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-9 col-lg-9" style="margin-left: 100px;">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>

        <div class="modal fade" id="postModal" tabindex="-1" aria-labelledby="postModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content border-0 shadow-lg">
                
                <div class="modal-header bg-light">
                    <h5 class="modal-title fw-semibold" id="postModalLabel">Confirmar cierre de sesión</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>

                <div class="modal-body text-center py-4">
                    <p class="fs-5 mb-0">¿Estás seguro de que deseas cerrar sesión?</p>
                    <p class="text-muted small">Tu sesión actual se cerrará y deberás iniciar sesión nuevamente para continuar.</p>
                </div>

                <div class="modal-footer justify-content-center border-0 pb-4">
                    <form method="get" action="/Login" class="d-inline">
                    <button type="submit" class="btn btn-danger px-4">Cerrar sesión</button>
                    <button type="button" class="btn btn-outline-secondary px-4" data-bs-dismiss="modal">Cancelar</button>
                    </form>
                </div>
                </div>
            </div>
        </div>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>

        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>

@section Scripts {
  <script src="~/js/posts.js"></script>
}