<script>
  function verPerfil(userId) {
    window.location.href = `/Profile?userId=${encodeURIComponent(userId)}`;
  }
</script>



<script>
    const searchBox = document.getElementById('searchBox');
    const careerSelect = document.getElementById('careerFilter');
    const resultsList = document.getElementById('searchResults');
    const friendPanel = document.getElementById('friendPanel');

    let timeoutId;

    // Expandir al hacer foco
    searchBox.addEventListener("focus", () => {
        friendPanel.classList.add("expanded");
    });

    // Cerrar al quitar foco del panel (opcional)
    document.addEventListener("click", function (event) {
        if (!friendPanel.contains(event.target)) {
            friendPanel.classList.remove("expanded");
        }
    });

    function hacerBusqueda() {
        clearTimeout(timeoutId);
        const username = searchBox.value.trim();
        const major = careerSelect.value;

        if (username === "" && major === "") {
            resultsList.innerHTML = "";
            return;
        }

        timeoutId = setTimeout(() => {
            const url = `/Feed?handler=BuscarAmigos&username=${encodeURIComponent(username)}&major=${encodeURIComponent(major)}`;

            fetch(url)
                .then(response => {
                    if (!response.ok) throw new Error("Error al buscar");
                    return response.json();
                })
                .then(data => {
                    resultsList.innerHTML = "";

                    if (data.length === 0) {
                        resultsList.innerHTML = `<li class="text-muted">Sin resultados</li>`;
                        return;
                    }

                    data.forEach(amigo => {
                        const li = document.createElement("li");
                        li.innerHTML = `
                          <a href="javascript:void(0);" onclick="verPerfil('${amigo.id}')" class="text-decoration-none text-dark d-flex align-items-center mb-1">
                            <img src="${amigo.photo}" alt="Amigo" class="rounded-circle me-2" style="width: 30px; height: 30px; object-fit: cover;">
                            <span>${amigo.name}</span>
                          </a>`;
                        resultsList.appendChild(li);
                    });
                })
                .catch(error => {
                    resultsList.innerHTML = `<li class="text-danger">Error al buscar</li>`;
                    console.error(error);
                });
        }, 300);
    }

    searchBox.addEventListener('input', hacerBusqueda);
    careerSelect.addEventListener('change', hacerBusqueda);
</script>

