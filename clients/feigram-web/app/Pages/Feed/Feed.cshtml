@section Scripts {
  <script src="~/js/posts.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
    const form = document.getElementById('uploadPictureForm');

    form.addEventListener('submit', async function (e) {
        e.preventDefault();

        const inputImagen = document.getElementById('inputImagen');
        const files = inputImagen.files;
        const description = form.querySelector('textarea[name="description"]').value;

        if (files.length === 0 || description.trim() === '') {
            alert("Selecciona al menos una imagen y agrega una descripci√≥n.");
            return;
        }

        // ‚úÖ Fecha fija para agrupar todas las im√°genes
        const fixedDate = new Date().toISOString();

        for (const file of files) {
            const formData = new FormData();
            formData.append("imagen", file);
            formData.append("description", description);
            formData.append("fechaPublicacion", fixedDate);

            const response = await fetch('/Feed?handler=NuevoPost', {
                method: 'POST',
                body: formData
            });

            const result = await response.json();

            if (!result.success) {
                alert("Error al subir una de las im√°genes: " + result.message);
                return;
            }
        }

        alert("Publicaci√≥n con m√∫ltiples im√°genes creada correctamente.");
        bootstrap.Modal.getInstance(document.getElementById('uploadPictureModal')).hide();
        location.reload();
    });
});

  </script>

  <script>
  function fakeLike(postId) {
    const likeCounter = document.querySelector(`#likes-count-${postId}`);
    let count = parseInt(likeCounter.textContent) || 0;
    likeCounter.textContent = count + 1;
