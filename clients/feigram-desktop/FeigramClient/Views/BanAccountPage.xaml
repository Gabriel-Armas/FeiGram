<Page x:Class="FeigramClient.Views.BanAccountPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="White"
      Title="BanAccountPage" Height="250" Width="450">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="35*"/>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Grid.RowSpan="2">
            <TextBlock Text="Banear Cuenta" FontSize="24" FontWeight="Bold" Margin="0 0 0 20"/>

            <TextBlock Text="¿Estás seguro de que deseas banear a este usuario?" FontSize="14" Margin="0 0 0 30"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0 20 0 0">
                <Button Content="Cancelar" Margin="0 0 10 0" Padding="10 5"
                    Click="Cancelar_Click" Background="Gray" Foreground="White"/>
                <Button Content="Confirmar" Padding="10 5"
                    Click="Confirmar_Click" Background="#F44336" Foreground="White"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
