<Page x:Class="FeigramClient.Views.ConsultPost"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border CornerRadius="15" Padding="10" Background="White" Margin="40">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Button Margin="0,0,10,0"
                    Cursor="Hand"
                    HorizontalAlignment="Right"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="Close_Click">
                <Image Source="/Resources/close.png" Width="27" Height="27"/>
            </Button>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Columna de la publicación -->
                    <StackPanel x:Name="PostContainer"
                                Grid.Column="0"
                                Width="800"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="0,0,20,0">
                        <Border Background="White"
                                CornerRadius="10"
                                Padding="10"
                                MaxWidth="500">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.4"/>
                            </Border.Effect>

                            <StackPanel>
                                <!-- Header del post -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <Ellipse Width="40" Height="40" Margin="0,0,10,0">
                                        <Ellipse.Fill>
                                            <ImageBrush ImageSource="{Binding UserProfileImage}" />
                                        </Ellipse.Fill>
                                    </Ellipse>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Username}" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding TimeAgo}" FontSize="10" Foreground="Gray"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Imagen del post -->
                                <Border CornerRadius="10" ClipToBounds="True" Margin="0,0,0,10">
                                    <Image Source="{Binding PostImage}" Height="400" Stretch="UniformToFill"/>
                                </Border>

                                <!-- Descripción -->
                                <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Margin="0,10,0,10"/>

                                <!-- Botones de acción -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <Button Name="BtnLike"
                                            Margin="0,0,10,0"
                                            Cursor="Hand"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Click="LikeButton_Click">
                                        <Image Name="ImgLike" Source="/Resources/megusta.png" Width="27" Height="27"/>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Columna de comentarios -->
                    <Border Grid.Column="1"
                            Background="White"
                            CornerRadius="10"
                            Padding="10"
                            HorizontalAlignment="Left"
                            Width="700">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!-- Lista de mensajes -->
                            <ListBox x:Name="ChatMessages"
                                     Grid.Row="0"
                                     Margin="0 0 0 10"
                                     MaxHeight="550"
                                     Background="#F9F9F9"
                                     BorderBrush="#CCC"
                                     BorderThickness="1"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto"/>

                            <!-- Entrada de mensaje -->
                            <StackPanel Grid.Row="1" Orientation="Horizontal">
                                <TextBox x:Name="MessageInput"
                                         Width="184"
                                         Margin="0 0 5 0"
                                         Height="30"
                                         VerticalContentAlignment="Center"/>
                                <Button Content="Enviar"
                                        Height="30"
                                        Padding="15 0"
                                        Click="Send_Click"
                                        Background="#2196F3"
                                        Foreground="White"
                                        BorderBrush="Transparent"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Border>
</Page>
