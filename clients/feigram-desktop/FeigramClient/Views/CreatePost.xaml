<Page x:Class="FeigramClient.Views.CreatePost"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Title="CreatePost">

    <Border CornerRadius="15" Padding="20" Background="White" Margin="380,120">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Botón de cerrar -->
            <Button HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="Cancel_Click">
                <Image Source="/Resources/close.png" Width="27" Height="27"/>
            </Button>

            <!-- Contenido principal -->
            <StackPanel Grid.Row="1" Margin="40" VerticalAlignment="Top" HorizontalAlignment="Center" Width="500">

                <!-- Preview clickeable para seleccionar imagen -->
                <Border CornerRadius="10"
                        BorderBrush="#CCC"
                        BorderThickness="1"
                        Background="#FAFAFA"
                        Height="300"
                        Width="Auto"
                        Cursor="Hand"
                        MouseEnter="ImagePreview_MouseEnter"
                        MouseLeave="ImagePreview_MouseLeave"
                        MouseLeftButtonUp="SelectImage_Click"
                        ClipToBounds="True"
                        x:Name="ImagePreviewBorder">

                    <Grid>
                        <Image x:Name="PreviewImage" Stretch="UniformToFill"/>
                        <TextBlock x:Name="HoverText"
                                   Text="Selecciona una imagen"
                                   Foreground="White"
                                   Background="#80000000"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Visibility="Collapsed"
                                   Padding="10"
                                   TextAlignment="Center"/>
                        <Button Content="✖"
                                Width="30"
                                Height="30"
                                Background="#FF5252"
                                Foreground="White"
                                FontWeight="Bold"
                                BorderBrush="Transparent"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="5"
                                Click="RemoveImage_Click"
                                Cursor="Hand"/>
                    </Grid>
                </Border>

                <!-- Descripción -->
                <StackPanel>
                    <TextBlock Text="Descripción de tu publicación"
                               FontSize="14"
                               FontWeight="Bold"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="DescriptionBox"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Height="100"
                             VerticalScrollBarVisibility="Auto"
                             FontSize="14"
                             BorderBrush="#CCC"
                             Padding="10"/>
                </StackPanel>

                <!-- Botones -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Cancelar"
                            Click="Cancel_Click"
                            Padding="15,5"
                            Background="#E0E0E0"
                            BorderBrush="Transparent"
                            Cursor="Hand"/>
                    <Button Content="Publicar"
                            Click="Publish_Click"
                            Padding="15,5"
                            Background="#2196F3"
                            Foreground="White"
                            BorderBrush="Transparent"
                            Cursor="Hand"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Page>
