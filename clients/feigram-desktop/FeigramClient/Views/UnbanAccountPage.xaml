<Page x:Class="FeigramClient.Views.UnbanAccountPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="White"
      Title="UnbanAccountPage" Height="250" Width="450">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="35*"/>
        </Grid.RowDefinitions>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Grid.RowSpan="2">
            <TextBlock Text="Desbanear Cuenta" FontSize="24" FontWeight="Bold" Margin="0 0 0 20" Foreground="#4CAF50"/>

            <TextBlock Text="¿Deseas desbanear a este usuario y restaurar su acceso?" FontSize="14" Margin="0 0 0 30"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 20 0 0">
                <Button Content="Cancelar" Margin="0 0 10 0" Padding="10 5"
                        Click="Cancel_Click" Background="Gray" Foreground="White"/>
                <Button Content="Confirmar" Padding="10 5"
                        Click="Confirm_Click" Background="#4CAF50" Foreground="White"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>