<Page x:Class="FeigramClient.Views.Messages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FeigramClient.Views"
      xmlns:models="clr-namespace:FeigramClient.Models"
        xmlns:converters="clr-namespace:FeigramClient.Resources"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="Messages">

    <Page.Resources>
        <converters:MessageAlignmentConverter x:Key="MessageAlignmentConverter" />
        <converters:MessageBubbleColorConverter x:Key="MessageBubbleColorConverter" />

        <DataTemplate x:Key="ChatMessageTemplate" DataType="{x:Type models:MessageDto}">
            <StackPanel Margin="5"
                HorizontalAlignment="{Binding FromUserId, Converter={StaticResource MessageAlignmentConverter}}">
                <Border Background="{Binding FromUserId, Converter={StaticResource MessageBubbleColorConverter}}"
                CornerRadius="12" Padding="10" MaxWidth="300">
                    <TextBlock Text="{Binding Content}" TextWrapping="Wrap" />
                </Border>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>

    <Grid Background="#FFF8FBFF" Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Lista de amigos kawaii -->
        <StackPanel Grid.Column="0" Background="#FFEDF4FF">
            <TextBlock Text="Mis Senpais ✨" FontWeight="Bold" FontSize="20" 
                       Margin="10" Foreground="#FF4A90E2" />
            <ListBox x:Name="FriendsList"
                     ItemsSource="{Binding Friends}"
                     DisplayMemberPath="Name"
                     SelectionChanged="FriendsList_SelectionChanged"
                     Margin="10" />
        </StackPanel>

        <!-- Separador uwu -->
        <Border Grid.Column="1" Background="#FFE3E3E3" Width="1"/>

        <!-- Panel de chat mágico -->
        <Grid Grid.Column="2" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Título del chat -->
            <TextBlock x:Name="ChatTitle" 
                       Text="Selecciona a un amigo~ 💬" 
                       FontSize="22" FontWeight="Bold"
                       Foreground="#FF4A90E2" Margin="0 0 0 10"/>

            <!-- Mensajes -->
            <ListBox x:Name="ChatMessagesList"
                     ItemsSource="{Binding ChatMessages}"
                     Grid.Row="1"
                     Margin="0 0 0 10"
                     Background="#FFFFFFFF"
                     BorderBrush="#FFD6E1F5"
                     BorderThickness="1"
                     ItemTemplate="{StaticResource ChatMessageTemplate}" />

            <!-- Envío de mensajito bonito -->
            <StackPanel Orientation="Horizontal" Grid.Row="2">
                <TextBox x:Name="ChatInput"
                         Width="700"
                         Height="40"
                         Margin="0 0 10 0"
                         FontSize="14"
                         VerticalContentAlignment="Center"
                         Padding="10"/>
                <Button Content="Enviar 🚀"
                        Width="100"
                        Height="40"
                        Click="SendMessage_Click"
                        Background="#FF4A90E2"
                        Foreground="White"
                        FontWeight="Bold"
                        Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
