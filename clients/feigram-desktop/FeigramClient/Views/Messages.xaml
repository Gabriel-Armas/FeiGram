<Page x:Class="FeigramClient.Views.Messages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FeigramClient.Views"
      xmlns:models="clr-namespace:FeigramClient.Models"
      xmlns:converters="clr-namespace:FeigramClient.Resources"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="Messages">

    <Page.Resources>
        <!-- Estilo de botón redondeado con efecto hover -->
        <Style x:Key="RoundedHoverButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="10"
                            Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Left"
                                          VerticalAlignment="Center"
                                          Margin="{TemplateBinding Padding}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#ececed"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#ececed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Conversores para el chat -->
        <converters:MessageAlignmentConverter x:Key="MessageAlignmentConverter" />
        <converters:MessageBubbleColorConverter x:Key="MessageBubbleColorConverter" />

        <!-- Plantilla para los mensajes del chat -->
        <DataTemplate x:Key="ChatMessageTemplate" DataType="{x:Type models:MessageDto}">
            <StackPanel Margin="5"
            HorizontalAlignment="{Binding FromUserId, Converter={StaticResource MessageAlignmentConverter}}">
                <Border Background="{Binding FromUserId, Converter={StaticResource MessageBubbleColorConverter}}"
            CornerRadius="12" Padding="10" MaxWidth="300">
                    <StackPanel>
                        <TextBlock Text="{Binding Content}" TextWrapping="Wrap" />
                        <TextBlock Text="{Binding SentAt, StringFormat='HH:mm'}" FontSize="10" Foreground="Gray" HorizontalAlignment="Right"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>


    <Grid Background="#F0F2F5" Name="GridMenu">
        <!-- Aquí podrías agregar Overlay o Modal si lo deseas -->

        <DockPanel>
            <!-- Barra lateral -->
            <StackPanel DockPanel.Dock="Left" Width="280" Background="#FFF">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10">
                    <Image Source="/Resources/feigramlogo.png" Height="40" Width="40" Margin="0,0,10,0"/>
                    <TextBlock Text="Feigram" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>

                <Button Style="{StaticResource RoundedHoverButtonStyle}" Margin="10,5" Height="40" Padding="5,0"
                        HorizontalContentAlignment="Left" Click="Home_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/hogar.png" Width="20" Height="20" Margin="0,0,10,0"/>
                        <TextBlock Text="Inicio" FontSize="14" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource RoundedHoverButtonStyle}" Margin="10,5" Height="40" Padding="5,0"
                        HorizontalContentAlignment="Left" Click="Profile_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/usuario.png" Width="20" Height="20" Margin="0,0,10,0"/>
                        <TextBlock Text="Perfil" FontSize="14" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource RoundedHoverButtonStyle}" Margin="10,5" Height="40" Padding="5,0"
                        HorizontalContentAlignment="Left" Click="Messages_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/mensajes.png" Width="20" Height="20" Margin="0,0,10,0"/>
                        <TextBlock Text="Mensajes" FontSize="14" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource RoundedHoverButtonStyle}" Margin="10,5" Height="40" Padding="5,0"
                        HorizontalContentAlignment="Left" Click="Accounts_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/cuentas.png" Width="20" Height="20" Margin="0,0,10,0"/>
                        <TextBlock Text="Cuentas" FontSize="14" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource RoundedHoverButtonStyle}" Margin="10,5" Height="40" Padding="5,0"
                        HorizontalContentAlignment="Left" Click="Stadistic_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/grafico.png" Width="20" Height="20" Margin="0,0,10,0"/>
                        <TextBlock Text="Estadísticas" FontSize="14" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource RoundedHoverButtonStyle}" Margin="10,5" Height="40" Padding="5,0"
                        HorizontalContentAlignment="Left" Click="CloseSession_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/salida.png" Width="20" Height="20" Margin="0,0,10,0"/>
                        <TextBlock Text="Cerrar Sesión" FontSize="14" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
        <StackPanel Grid.Column="0" Background="#FFEDF4FF">
            <TextBlock Text="Seguidos" FontWeight="Bold" FontSize="20" 
                       Margin="10" Foreground="#FF4A90E2" />
            <ListBox x:Name="FriendsList"
                     ItemsSource="{Binding Friends}"
                     DisplayMemberPath="Name"
                     SelectionChanged="FriendsList_SelectionChanged"
                     Margin="10" />
        </StackPanel>

        <Border Grid.Column="1" Background="#FFE3E3E3" Width="1"/>

        <Grid Grid.Column="2" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="ChatTitle" 
                       Text="Chat" 
                       FontSize="22" FontWeight="Bold"
                       Foreground="#FF4A90E2" Margin="0 0 0 10"/>

            <ListBox x:Name="ChatMessagesList"
                     ItemsSource="{Binding ChatMessages}"
                     Grid.Row="1"
                     Margin="0 0 0 10"
                     Background="#FFFFFFFF"
                     BorderBrush="#FFD6E1F5"
                     BorderThickness="1"
                     ItemTemplate="{StaticResource ChatMessageTemplate}" />

            <StackPanel Orientation="Horizontal" Grid.Row="2">
                <TextBox x:Name="ChatInput"
                         Width="700"
                         Height="40"
                         Margin="0 0 10 0"
                         FontSize="14"
                         VerticalContentAlignment="Center"
                         Padding="10"/>
                <Button Content="Enviar 🚀"
                        Width="100"
                        Height="40"
                        Click="SendMessage_Click"
                        Background="#FF4A90E2"
                        Foreground="White"
                        FontWeight="Bold"
                        Cursor="Hand"/>
            </StackPanel>

            <!-- Contenido principal del chat -->
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Background="#FFEDF4FF">
                    <TextBlock Text="Seguidos" FontWeight="Bold" FontSize="20" 
                               Margin="10" Foreground="#FF4A90E2" />
                    <ListBox x:Name="FriendsList"
                             ItemsSource="{Binding Friends}"
                             DisplayMemberPath="Name"
                             SelectionChanged="FriendsList_SelectionChanged"
                             Margin="10" />
                </StackPanel>

                <Border Grid.Column="1" Background="#FFE3E3E3" Width="1"/>

                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="ChatTitle" 
                               Text="Chat" 
                               FontSize="22" FontWeight="Bold"
                               Foreground="#FF4A90E2" Margin="0 0 0 10"/>

                    <ListBox x:Name="ChatMessagesList"
                             ItemsSource="{Binding ChatMessages}"
                             Grid.Row="1"
                             Margin="0 0 0 10"
                             Background="#FFFFFFFF"
                             BorderBrush="#FFD6E1F5"
                             BorderThickness="1"
                             ItemTemplate="{StaticResource ChatMessageTemplate}" />

                    <StackPanel Orientation="Horizontal" Grid.Row="2">
                        <TextBox x:Name="ChatInput"
                                 Width="700"
                                 Height="40"
                                 Margin="0 0 10 0"
                                 FontSize="14"
                                 VerticalContentAlignment="Center"
                                 Padding="10"/>
                        <Button Content="Enviar 🚀"
                                Width="100"
                                Height="40"
                                Click="SendMessage_Click"
                                Background="#FF4A90E2"
                                Foreground="White"
                                FontWeight="Bold"
                                Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </DockPanel>
    </Grid>
</Page>
